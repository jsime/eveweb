[% META title = 'Admin - Users' %]

[% PROCESS site/breadcrumbs %]

<h1>Users</h1>

<table class="full-width">
    <thead>
        <tr>
            <td>Username</td>
            <td>Email</td>
            <td>Roles</td>
            <td>Verified</td>
            <td>Created</td>
            <td>Updated</td>
            <td>Deleted</td>
        </tr>
    </thead>
[% FOREACH user IN users %]
    <tr>
        <td>
            <a href="[% c.uri_for('/admin/users', user.user_id) %]">
                [% user.username %]
            </a>
        </td>
        <td>[% user.email %]</td>
        <td>[% user.roles.join(', ') %]</td>
        <td>[% user.verified ? 'Yes' : '' %]</td>
        <td>[% user.created_at %]</td>
        <td>[% user.updated_at %]</td>
        <td>[% user.deleted_at %]</td>
    </tr>
[% END %]
</table>
